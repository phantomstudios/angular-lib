{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist/out-tsc",
    "rootDir": "./src",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@phntms/angular-lib": ["./dist/angular-lib"],
      "@phntms/angular-lib/*": ["./dist/angular-lib/*"]
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "enableResourceInlining": true,
    "enableIvy": false,
    "fullTemplateTypeCheck": true,
    "skipTemplateCodegen": true,
    "strictInjectionParameters": true,
    "strictMetadataEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
